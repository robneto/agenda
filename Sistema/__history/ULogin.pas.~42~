unit ULogin;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls,
  Vcl.Imaging.pngimage, Data.DB, Data.Win.ADODB;

type
  TFLogin = class(TForm)
    Image1: TImage;
    Label1: TLabel;
    edtLogin: TEdit;
    Label2: TLabel;
    edtSenha: TEdit;
    BitBtn1: TBitBtn;
    BitBtn2: TBitBtn;
    QLogin: TADOQuery;
    QLoginAcesso: TStringField;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
    tentativas : integer;
  public
    { Public declarations }
  end;

var
  FLogin: TFLogin;

implementation

{$R *.dfm}

uses Udm;

procedure TFLogin.BitBtn1Click(Sender: TObject);
begin
   FLogin.ModalResult := mrOk;

   if ( QLogin.Active = False) then
   begin
      QLogin.Parameters.ParamByName('usrnome').Value := edtLogin.Text;
      QLogin.Parameters.ParamByName('senha').Value   := edtSenha.Text;
      QLogin.Open;

      if (QLogin.FieldByName('Acesso').AsString = 'TRUE') then
         FLogin.ModalResult := mrOk
      else
      begin
         if (tentativas <= 3) then
         begin
            FLogin.ModalResult := mrNone;
            raise Exception.Create('Usuário ou senha inválido! Tentativa ' + IntToStr(tentativas) + '/3' );
         end
         else
            FLogin.ModalResult := mrClose;

         tentativas := tentativas + 1;
      end;
   end;
end;

procedure TFLogin.FormCreate(Sender: TObject);
begin
   tentativas := 1;
end;

end.
